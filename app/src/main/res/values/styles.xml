<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="category_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/category_title_text_size</item>
        <item name="android:layout_margin">@dimen/category_title_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="search_result_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:layout_margin">@dimen/category_title_margin</item>
        <item name="android:layout_gravity">left|start</item>
        <item name="android:gravity">left|start</item>
    </style>

    <style name="search_result_rating">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numStars">5</item>
        <item name="android:layout_gravity">left|start</item>
        <item name="android:gravity">left|start</item>
        <item name="android:layout_marginLeft">@dimen/category_title_margin</item>
        <item name="android:layout_marginRight">@dimen/category_title_margin</item>
        <item name="android:layout_marginBottom">@dimen/category_title_margin</item>
        <item name="android:layout_marginTop">@dimen/category_margin_zero</item>
        <item name="android:focusable">false</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="search_detail_rating" parent="search_result_rating">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="search_rating" parent="search_result_rating">
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
        <item name="android:transformPivotX">0dp</item>
        <item name="android:transformPivotY">0dp</item>
    </style>

    <style name="detail_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:layout_marginTop">@dimen/category_title_margin</item>
        <item name="android:layout_marginLeft">@dimen/category_title_margin</item>
        <item name="android:layout_marginRight">@dimen/category_title_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detail_address" parent="detail_title">
        <item name="android:textSize">@dimen/regular_font_size</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="phone_website_address">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/category_title_margin</item>
        <item name="android:layout_marginLeft">@dimen/phone_website_margin</item>
        <item name="android:layout_marginRight">@dimen/phone_website_margin</item>
        <item name="android:layout_marginBottom">@dimen/category_title_margin</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="open_now_symbol">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/category_title_margin</item>
        <item name="android:layout_marginLeft">@dimen/phone_website_margin</item>
        <item name="android:layout_marginRight">@dimen/phone_website_margin</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="timing_text" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:layout_marginTop">@dimen/category_title_margin</item>
        <item name="android:layout_marginLeft">@dimen/phone_website_margin</item>
        <item name="android:layout_marginRight">@dimen/phone_website_margin</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_gravity">left|start</item>
        <item name="android:gravity">left|start</item>
    </style>

    <style name="favorite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right|end</item>
        <item name="android:layout_gravity">right|end</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="review_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/regular_font_size</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">left|start</item>
        <item name="android:gravity">left|start</item>
    </style>
</resources>
