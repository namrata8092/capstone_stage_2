<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout android:id="@+id/row_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:transitionName="@string/shared_transition_name_from_category_to_list">

        <TextView
            android:id="@+id/title"
            style="@style/search_result_title"
            tools:text="result"
            android:transitionName="@string/shared_transition_name_from_list_to_detail"/>

        <RatingBar
            android:id="@+id/result_rating"
            style="@style/search_result_rating" />
    </LinearLayout>

</android.support.v7.widget.CardView>
